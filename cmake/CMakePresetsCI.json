{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "include": [
    "CMakePresetsBase.json",
    "CMakePresetsLinux.json",
    "CMakePresetsMinGW.json"
  ],
  "configurePresets": [
    {
      "name": "Documentation",
      "inherits": "base",
      "cacheVariables": {
        "EVL_DOC_ONLY": "ON",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "linux-coverage-gcc",
      "inherits": "linux-gcc-debug",
      "cacheVariables": {
        "EVL_ENABLE_COVERAGE": "ON"
      }
    },
    {
      "name": "linux-coverage-clang",
      "inherits": "linux-clang-debug",
      "cacheVariables": {
        "EVL_ENABLE_COVERAGE": "ON"
      }
    },
    {
      "name": "windows-coverage-gcc",
      "inherits": "windows-gcc-debug",
      "cacheVariables": {
        "EVL_ENABLE_COVERAGE": "ON"
      }
    },
    {
      "name": "windows-coverage-clang",
      "inherits": "windows-clang-debug",
      "cacheVariables": {
        "EVL_ENABLE_COVERAGE": "ON"
      }
    },
    {
      "name": "linux-clang-tidy",
      "inherits": "linux-clang-debug",
      "cacheVariables": {
        "EVL_ENABLE_CLANG_TIDY": "ON"
      }
    },
    {
      "name": "windows-clang-tidy",
      "inherits": "windows-clang-debug",
      "cacheVariables": {
        "EVL_ENABLE_CLANG_TIDY": "ON"
      }
    },
    {
      "name": "linux-sanitizer-address",
      "inherits": "linux-clang-debug",
      "cacheVariables": {
        "EVL_ENABLE_ADDRESS_SANITIZER": "ON"
      }
    },
    {
      "name": "linux-sanitizer-thread",
      "inherits": "linux-clang-debug",
      "cacheVariables": {
        "EVL_ENABLE_THREAD_SANITIZER": "ON"
      }
    },
    {
      "name": "linux-sanitizer-undefined-behavior",
      "inherits": "linux-clang-debug",
      "cacheVariables": {
        "EVL_ENABLE_UNDEFINED_BEHAVIOR_SANITIZER": "ON"
      }
    },
    {
      "name": "linux-sanitizer-leak",
      "inherits": "linux-clang-debug",
      "cacheVariables": {
        "EVL_ENABLE_LEAK_SANITIZER": "ON"
      }
    }
  ]
}
